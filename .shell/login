# Source secret environment vars
. ~/.shell/secret

# Put your environment variables here

# Preferred Programs
export PAGER=less
export EDITOR=vim
export VISUAL=$EDITOR

export ANDROID_HOME=/usr/local/opt/android-sdk

# Clojure
export BOOT_JVM_OPTIONS="-client -XX:+TieredCompilation -XX:TieredStopAtLevel=1 -Xmx2g -XX:+UseConcMarkSweepGC -XX:+CMSClassUnloadingEnabled -Xverify:none"
export BOOT_EMIT_TARGET=no

# Path Settings
pathprepend ~/bin PATH
pathprepend /usr/local/bin PATH
#pathprepend /usr/bin PATH
pathprepend /bin PATH
pathprepend /usr/sbin PATH
pathprepend /sbin PATH

# Nix Path Settings (temporary while support is exp. on OS X)
NIX_PATH=~/.nix-pkgs-osx/nixpkgs:nixpkgs=~/.nix-pkgs-osx/nixpkgs
